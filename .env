# .env file for local development
#GCP_PROJECT_ID="candidate-platform-449913" # Replace with your GCP Project ID (We are not using this anywhere)
GCP_PROJECT_ID=465504632687
GCS_BUCKET_NAME=stag_metantz
GCS_AUDIO_ROOT_PREFIX="shardul_test/test_extracted_audio/"
GCS_RESULTS_PREFIX="shardul_test/test_json_result/"
GCS_EMBEDDINGS_PREFIX="shardul_test/test_embeddings/"

# Point this to your service account key file
# Example: GOOGLE_APPLICATION_CREDENTIALS=/Users/youruser/keys/my-service-account-key.json
